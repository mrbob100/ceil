{{ register_asset_bundle('app/assets/AppAsset') }}
{% if session.cart %}

    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Фото</th>
                    <th>Наименование</th>
                    <th>Кол-во</th>
                    <th>Цена</th>
                    <th><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></th>
                </tr>
            </thead>
            <tbody>

            {% for item1 in session.cart %}
                {% for item in item1 %}

                <tr>
                    <td> <img src="{{ url('@web/images/home/' ~item.img) }}" height="50" alt="картинка"/> </td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.qty }}</td>
                    <td>{{ item.price }}</td>
                    <td><span  data-id = "{{ item.product }}" data-cat="{{ item.category }}"  class="glyphicon glyphicon-remove text-danger del-item" aria-hidden="true"></span></td>
                </tr>
                {% endfor %}
        {% endfor %}
                <tr>
                    <td colspan="4">Итого: </td>
                    <td>{{ session['cart.qty'] }}</td>
                </tr>
                <tr>
                    <td colspan="4">На сумму: </td>

                   <td>   {{ session['cart.sum'] }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% else %}
    <h3>Корзина пуста</h3>
{% endif %}