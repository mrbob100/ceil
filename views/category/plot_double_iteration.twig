<section>
    <div class="container">
        <div class="row">

            <div class="col-sm-3">

                <div class="left-sidebar">
                    <h2>Category</h2>
                    <ul class="catalog category-products">
                        <div>{{ akkordeon|raw }}</div>
                    </ul>



                </div>

            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items"><!--features_items-->
                    {%  block content %}
                        <h2 class="title text-center">{{ category.name }}</h2>
                        {% set i=0 %}
                        <h4>{{ item.name }} </h4>
                        <label>количество:</label>
                        <p><input  type="text" value="1"  id="qty" /></p>





                        {% for item in arch %}

                            <div class="col-sm-6 akes">
                                <div class="{{ cycle(["even", "odd"], loop.index) }}">



                                    {% for it in item.potolok %}
                                    <div class="akes">
                                        <img src="{{ path('../images/home/'~ item.img ) }}" alt="" />
                                        <br/>


                                        <p class="text-justify">ItemUID {{  it.ItemUID|raw }} </p>
                                        <p class="text-justify"> {{  item.diller|raw }} </p>
                                        <p class="text-justify">количество {{  it.Quantity|raw }} </p>
                                        <p class="text-justify">цена {{  it.Price|raw }} руб. </p>
                                        <p class="text-justify">сумма {{  it.Sum|raw }} руб. </p>
                                        <p > 'Id' {{  it.ID }} </p>
                                        <p > 'ceilingId' {{  it.CeilingID|raw }} </p>
                                        <a href="{{path('cart/add',{'id': it.ID })}}" data-id="{{ it.ID  }}" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                    </div>
                                    {% endfor %}

                                </div>




                            </div>

                            {% set i=i+1 %}
                            {% if (i%4)==0 %}
                                <div class="clearfix"></div>
                            {% endif %}

                        {% endfor %}




                        {{ use('/yii/widgets') }}
                        {{link_pager_widget({
                            'pagination': pages
                        }) }}




                        {%  if i==0 %}
                            <h2>Здесь товаров пока нет...</h2>
                        {% endif %}
                    {% endblock %}
                </div><!--features_items  -->

            </div>
        </div>
    </div>
</section>
